<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="40dp"
        android:focusable="true"
        android:id="@+id/cardApprovedBooking"
        android:visibility="gone"
        app:cardBackgroundColor="@color/itemColor"
        android:layout_margin="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_hospitalCardApproved"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:gravity="center"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SectionApprovedCard"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DoctorOrBedApprovedCard"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/periodApprovedCard"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/Appointment_timeApproved"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DateBooking"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>